<script type="text/javascript">  
  $(function() {
    
    var championships = new PingPong.Collections.Championships();   
    var championships_view = new  PingPong.Views.Championships({collection: championships});
    championships.fetch({success: function(collection, response, option){
      $("#championships").append(championships_view.render().el)
    }});
  });
</script>

<div class="col-sm-6" style="margin:auto;margin-top:100px;float:none">
<table id="championships" class="table table-striped">
  <thead>
    <tr>
      <th> Title </th>
      <th> Status </th>
      <th> Number of Player joined </th>            
    </tr>
  </thead>
  
</table>
</div>

<script type="javascript/template" id="championship-template">
    <td><a href="/championships/{{id}}">{{title}}</a></td>
    <td>{{status}}</td>    
</script>